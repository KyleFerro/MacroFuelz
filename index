  <div class="section" id="checklistSection">
    <div class="app">
      <h1>MacroFuel</h1>
      <div class="card">
        <h2>Monthly Checklist</h2>
        <p class="tracker">Days goal met: <span id="daysChecked">0</span>/30</p>
        <div class="grid">
          <script>
            for (let i = 1; i <= 30; i++) {
              document.write(`
                <label>Day ${i}
                  <input type="checkbox" class="day-check" onchange="updateTracker()">
                </label>
              `);
            }
          </script>
        </div>
      </div>
    </div>
  </div>

  <script>
    const trackerTab = document.getElementById('trackerTab');
    const checklistTab = document.getElementById('checklistTab');
    const trackerSection = document.getElementById('trackerSection');
    const checklistSection = document.getElementById('checklistSection');

    trackerTab.onclick = () => {
      trackerTab.classList.add('active');
      checklistTab.classList.remove('active');
      trackerSection.classList.add('active');
      checklistSection.classList.remove('active');
    };

    checklistTab.onclick = () => {
      checklistTab.classList.add('active');
      trackerTab.classList.remove('active');
      checklistSection.classList.add('active');
      trackerSection.classList.remove('active');
    };

    function updateTracker() {
      const checkboxes = document.querySelectorAll('.day-check');
      const count = Array.from(checkboxes).filter(cb => cb.checked).length;
      document.getElementById('daysChecked').textContent = count;
    }
  </script>
